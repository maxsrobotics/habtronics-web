---
import "../layouts/Layout.astro"
---
<div class="navbar fixed top-0 w-full h-15 bg-black flex items-center z-[10000]">
    <div class="logo">
        <a href="/">
            <img src="https://cloud-glhzd6bu2-hack-club-bot.vercel.app/0habtronics.svg" class="h-15 invert">
        </a>
    </div>
    <div class="links ml-auto mr-18 gap-18 items-center sm:hidden md:flex" id="nav-links">
        <a href="/" class="font-gugi text-2xl text-white no-underline hover-50">HOME</a>
        <a href="/shop" class="font-gugi text-2xl text-white no-underline hover-50">SHOP</a>
        <a href="/about-us" class="font-gugi text-2xl text-white no-underline hover-50">ABOUT US</a>
    </div>
    <div class="cart relative mr-5 items-center">
        <a href="/cart">
            <img src="https://cloud-5kujaastv-hack-club-bot.vercel.app/0bag.svg" alt="Cart" class="h-7 invert hover-50">
        </a>
    </div>
    <div class="hamburger text-3xl text-white cursor-pointer mr-5 md:hidden" id="hamburger">
        &#9776;
    </div>
</div>
<div class="mobile-menu hidden flex-col items-center bg-black text-white w-full" id="mobile-menu">
    <a href="/" class="font-gugi text-2xl text-white no-underline hover-50 py-2">HOME</a>
    <a href="/shop" class="font-gugi text-2xl text-white no-underline hover-50 py-2">SHOP</a>
    <a href="/about-us" class="font-gugi text-2xl text-white no-underline hover-50 py-2">ABOUT US</a>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const hamburger = document.getElementById("hamburger");
        const mobileMenu = document.getElementById("mobile-menu");

        if (hamburger && mobileMenu) {
            hamburger.addEventListener("click", () => {
                mobileMenu.classList.toggle("hidden");
                document.body.classList.toggle("menu-open");
            });
        }
    });
</script>
