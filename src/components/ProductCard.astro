---
interface Props {
    title: string;
    price: string;
    href: string;
    image: string;
    position?: string;
}

// Destructure the props
const { title, price, href, image, position } = Astro.props;
---

<div class="product-card">
    <img src={image} style=`object-position: ${position};` />
    <h1>{title}</h1>
    <div class="price-banner">
        <p>${price}</p>
        <form action={href} target="_blank">
            <input type="submit" value="View Page" onclick="" />
        </form>
    </div>
</div>

<style>
    .product-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 320px;
        height: 460px;
        border: 4px black solid;
        border-radius: 30px;
    }
    .product-card img {
        display: flex;
        object-fit: cover;
        width: 260px;
        height: 280px;
        border-radius: 10px;
        margin-top: 30px;
    }
    .product-card h1 {
        font-family: Gugi;
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        width: 260px;
    }

    .price-banner {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 70px;
    }
    .price-banner p {
        font-family: Gugi;
        font-size: 30px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }
    .price-banner input {
        width: 100px;
        height: 36px;

        font-family: Gugi;
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;

        border-radius: 10px;
        background: #d9d9d9;

        cursor: pointer;
    }
    .price-banner input:hover {
        opacity: 50%;
    }
</style>
