---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const resources = await getCollection("resources");
---

<Layout>
    <!-- im bored -->
    <section class="max-w-4xl mx-auto px-4 py-16">
        <h1 class="text-5xl font-sora mb-4">Resources</h1>
        <p class="font-inter text-lg text-gray-700 mb-10">
            Here's our collection of guides, tutorials, and tools for launching
            and tracking high-altitude balloon missions.
        </p>

        <ul class="space-y-6">
            {
                resources.map((resource) => (
                    <li class="bg-[#FDF9F5] border border-black rounded-xl p-6 transition hover:shadow-md">
                        <a
                            href={`/resources/${resource.slug}`}
                            class="text-2xl font-sora text-black hover:underline"
                        >
                            {resource.data.title}
                        </a>
                        {resource.data.description && (
                            <p class="mt-2 text-gray-700 font-inter">
                                {resource.data.description}
                            </p>
                        )}
                        {resource.data.tags && (
                            <div class="mt-3 flex flex-wrap gap-2 text-sm font-inter text-gray-600">
                                {resource.data.tags.map((tag) => (
                                    <span class="px-2 py-0.5 border border-gray-300 rounded-md bg-white">
                                        #{tag}
                                    </span>
                                ))}
                            </div>
                        )}
                    </li>
                ))
            }
        </ul>

        <div class="mt-16 text-center font-inter text-base text-gray-600">
            Want to contribute a guide or suggest a topic? <a
                href="mailto:max@habtronics.com"
                class="underline hover:text-blue-600">Get in touch</a
            >.
        </div>
    </section>
</Layout>
